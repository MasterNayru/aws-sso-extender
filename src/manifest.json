{
  "manifest_version": 3,
  "name": "AWS SSO Quickswitch",
  "version": "1.0.0",
  "description": "Quickly switch between AWS SSO (Identity Center) roles and accounts",
  "author": "WTFender",
  "homepage_url": "https://wtfender.com",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/128.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.awsapps.com/start*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; worker-src 'none'"
  },
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },
  "host_permissions": ["https://*/*"],
  "permissions": ["cookies", "tabs", "storage"],
  "options_page": "options.html",
  "devtools_page": "devtools.html"
}
